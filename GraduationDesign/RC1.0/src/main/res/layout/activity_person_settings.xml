<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.muguihai.rc1.activity.PersonSettingsActivity">
    <android.support.v7.widget.Toolbar
        android:orientation="vertical"
        android:background="#00aeff"
        android:padding="0dp"
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/password_setting_back"
                android:background="@drawable/selector_btn_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <EditText
        android:hint="输入个性签名"
        android:id="@+id/et_newSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="输入昵称"
        android:id="@+id/et_newNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="输入性别"
        android:id="@+id/et_newGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="输入电话"
        android:id="@+id/et_newTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="输入地址"
        android:id="@+id/et_newAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="输入邮箱"
        android:id="@+id/et_newEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="确定"
        android:background="@drawable/selector_btn"
        android:id="@+id/nickname_btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
